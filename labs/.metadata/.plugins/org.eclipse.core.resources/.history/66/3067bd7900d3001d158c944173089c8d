package com.clock.components;

import java.awt.BasicStroke;
import java.awt.Graphics2D;

import com.clock.Config;

public class ClockFace extends Component {

	@Override
	public void paint(Graphics2D g) {
		
		double w = Config.Face.WIDTH;
		double d = Config.CLOCK_RADIUS * 2;
		Vector c = ClockPanel.CENTER;
		g.setColor(Config.Face.COLOR);
		g.setStroke(new BasicStroke(Config.Face.WIDTH));
		g.drawOval(ClockPanel.CENTER.getScaledX(), ClockPanel.CENTER.getScaledY(), Config.CLOCK_RADIUS, Config.CLOCK_RADIUS);
	}

	
	@Override
	public void update() {
		
	}
}
