package com.clock.components;

import java.awt.Color;
import java.awt.Graphics;
import java.awt.Graphics2D;

import com.clock.util.Vector;

public class DiagonalLine extends Component {

	
	protected Vector start;
	protected Vector end;
	protected Color color;
	protected double angle;
	protected double length;
	protected double width = 10;
	
	public DiagonalLine(Vector start, double angle, double length, Color color) {
		this.start = start;
		this.angle = angle;
		this.color = color;
		this.length = length;
	}
	
	public DiagonalLine() {
		
	}

	@Override
	public void update() {
		end = start.getEndFromAngle(angle, length);
	}

	@Override
	public void paint(Graphics2D g) {
		g.setColor(color);
		g.drawLine(start.getScaledX(), start.getScaledY(), end.getScaledX(), end.getScaledY());
		
	}
}
