package com.clock.util;

import java.util.Random;

public class Calc {

	public static Vector[] getRandomPolygons(Vector start, double size) {
		Random random = new Random();
		Vector[] points = new Vector[6];
		for (int i = 0; i < 6; i++) {
			points[i] =  start.getEndFromAngle(i*60, (random.nextDouble() * (size / 2)) + (size/2));
		}
		
		return points;
	}
	
	
}
