package com.clock.components;

import java.awt.Color;
import java.awt.Graphics;

import com.clock.util.Vector;

public class DiagonalLine extends Component {

	
	private Vector start;
	private Vector end;
	private Color color;
	
	public DiagonalLine(Vector start, double angle, double length, Color color) {
		this.start = start;
		this.end = start.getEndFromAngle(angle, length);
		this.color = color;
	}

	@Override
	public void update() {
		
	}

	@Override
	public void paint(Graphics g) {
		g.setColor(color);
//		g.drawLine(start.getScaledX(), start.getScaledY(), end.getScaledX(), end.getScaledY());
		
		g.drawOval(start.getScaledX(), end.getScaledY(), 10, 10);
	}
}
